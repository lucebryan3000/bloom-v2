{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "Claude Code settings for Appmelia Bloom project",
  "model": "sonnet",
  "context": {
    "alwaysInclude": [
      "CLAUDE.md"
    ],
    "autoIncludePatterns": [
      "lib/**/*.ts",
      "components/**/*.tsx",
      "app/api/**/*.ts",
      "prisma/schema.prisma"
    ],
    "excludePatterns": [
      "node_modules/**",
      ".next/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "*.log",
      ".env*",
      "*.db",
      "*.db-wal",
      "*.db-shm"
    ]
  },
  "fileHeaders": {
    "enabled": true,
    "template": "// Auto-generated by Claude per Appmelia Instruction Set v2\n// Source: Appmelia Bloom PRD v6\n\n",
    "applyTo": [
      "*.ts",
      "*.tsx",
      "*.js",
      "*.jsx"
    ]
  },
  "codeStyle": {
    "typescript": {
      "strictMode": true,
      "noImplicitAny": true,
      "explicitReturnTypes": true,
      "preferInterfaces": false,
      "preferTypeAliases": true
    },
    "react": {
      "componentStyle": "functional",
      "propsDestructuring": true,
      "exportStyle": "named"
    },
    "naming": {
      "components": "PascalCase",
      "files": "camelCase",
      "constants": "SCREAMING_SNAKE_CASE",
      "types": "PascalCase"
    }
  },
  "testing": {
    "framework": "jest",
    "coverageThreshold": {
      "statements": 80,
      "branches": 75,
      "functions": 80,
      "lines": 80
    },
    "runBeforeCommit": true,
    "testPatterns": [
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.spec.ts"
    ]
  },
  "git": {
    "conventionalCommits": true,
    "commitTypes": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "test",
      "chore"
    ],
    "requireTests": true,
    "branchNaming": {
      "pattern": "(feature|fix|refactor|docs)/.+",
      "examples": [
        "feature/melissa-chat",
        "fix/roi-calculation",
        "refactor/database-queries"
      ]
    }
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/prompt-start.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/prompt-complete.sh",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "ai": {
    "provider": "anthropic",
    "modelId": "claude-sonnet-4-5-20250929",
    "systemPromptAppend": "Always follow the patterns established in CLAUDE.md. Use strict TypeScript. Include proper error handling. Write tests for new functionality.",
    "temperature": 0.7,
    "maxTokens": 4096
  },
  "database": {
    "provider": "sqlite",
    "orm": "prisma",
    "walMode": true,
    "backupBeforeMigration": true,
    "seedOnReset": true
  },
  "development": {
    "port": 3000,
    "autoReload": true,
    "openBrowser": false,
    "clearConsole": true,
    "typescript": {
      "checkOnSave": true,
      "strictMode": true
    }
  },
  "quality": {
    "linter": "eslint",
    "formatter": "prettier",
    "autoFix": true,
    "rules": {
      "noConsoleLog": "warn",
      "noUnusedVars": "error",
      "explicitAny": "error"
    }
  },
  "performance": {
    "targets": {
      "apiResponse": "200ms",
      "pageLoad": "2s",
      "roiCalculation": "500ms"
    },
    "monitoring": true
  },
  "security": {
    "scanDependencies": true,
    "preventSecretsCommit": true,
    "requireAuth": true,
    "validateInputs": true
  },
  "documentation": {
    "autoGenerate": false,
    "includeExamples": true,
    "format": "markdown",
    "locations": [
      "docs/",
      "README.md",
      "CLAUDE.md"
    ]
  },
  "phases": {
    "current": null,
    "completed": [],
    "order": [
      "phase-1-foundation",
      "phase-2-melissa",
      "phase-3-roi-engine",
      "phase-4-reporting",
      "phase-5-testing",
      "phase-6-optimization",
      "phase-7-production"
    ],
    "promptsDirectory": "_build/prompts/",
    "completedDirectory": "_build/completed/"
  },
  "customCommands": {
    "enabled": true,
    "directory": ".claude/commands/",
    "autoDiscover": true
  },
  "metadata": {
    "projectName": "Appmelia Bloom",
    "version": "1.0.0",
    "framework": "Next.js 14",
    "language": "TypeScript",
    "lastUpdated": "2025-01-06",
    "repository": "https://github.com/appmelia/bloom"
  },
  "permissions": {
    "deny": [
      "/home/luce/apps/bloom/.claude/settings.json",
      "Read(./node_modules/**)",
      "Read(./.next/**)"
    ]
  }
}
