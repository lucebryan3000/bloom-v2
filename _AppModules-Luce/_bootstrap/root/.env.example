# =============================================================================
# Bloom Development Environment Configuration
# =============================================================================
# Copy this file to .env.local before running the app:
#   cp .env.example .env.local
#
# After copying, initialize the database:
#   DATABASE_URL="file:./prisma/bloom.db?mode=wal" npx prisma db push
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------------------------------
# SQLite database URL - creates file in prisma/ directory
DATABASE_URL="file:./prisma/bloom.db?mode=wal"

# Phase 3 database (optional - for migration testing)
DATABASE_URL_PHASE3="file:./prisma/bloom-phase3.db?mode=wal"

# -----------------------------------------------------------------------------
# AUTHENTICATION (Required for auth features)
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET="dev-secret-change-in-production"
NEXTAUTH_URL="http://localhost:3001"

# -----------------------------------------------------------------------------
# AI/LLM APIs (Required for Melissa functionality)
# -----------------------------------------------------------------------------
# Set to your actual API key for Melissa to work
ANTHROPIC_API_KEY="test"
OPENAI_API_KEY="test"

# Melissa LLM model selection
MELISSA_LLM_MODEL=claude-sonnet-4-5-20250929

# -----------------------------------------------------------------------------
# PHASE 3 COMPATIBILITY (Optional - all default to false/disabled)
# -----------------------------------------------------------------------------
# Enable Phase 3 read operations (shadow mode)
NEXT_PUBLIC_ENABLE_PHASE3_READS=false

# Enable Phase 3 write operations (dual-write)
NEXT_PUBLIC_ENABLE_PHASE3_WRITES=false

# Server-side Phase 3 feature flags (used by runtime adapters/health)
PHASE3_ENABLE_READS=false
PHASE3_ENABLE_WRITES=false
PHASE3_ENABLE_SHADOW_MODE=false
