const path = require('path');

// Project root directory
const projectRoot = path.resolve(__dirname);

module.exports = {
  // ==========================================================================
  // CONFIGURATION FILE
  // ==========================================================================
  // Path to database connection configuration
  // Sequelize CLI expects a JSON/JS config file with connection details
  config: path.resolve(projectRoot, 'config', 'database.json'),

  // Alternative: JavaScript config for environment-based settings
  // config: path.resolve(projectRoot, 'config', 'database.js'),

  // ==========================================================================
  // MIGRATIONS DIRECTORY
  // ==========================================================================
  // Directory for migration files (separate from Drizzle migrations)
  'migrations-path': path.resolve(projectRoot, 'src', 'db', 'sequelize', 'migrations'),

  // ==========================================================================
  // SEEDERS DIRECTORY
  // ==========================================================================
  // Directory for data seeding scripts
  'seeders-path': path.resolve(projectRoot, 'src', 'db', 'sequelize', 'seeders'),

  // ==========================================================================
  // MODELS DIRECTORY
  // ==========================================================================
  // Directory for Sequelize models (if using Sequelize ORM)
  'models-path': path.resolve(projectRoot, 'src', 'db', 'sequelize', 'models'),
};

