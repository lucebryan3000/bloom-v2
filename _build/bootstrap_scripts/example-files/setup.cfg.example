# ==============================================================================
# setup.cfg - Python Tool Configuration Template (Legacy INI Format)
# ==============================================================================
#
# LOCATION: /setup.cfg (project root)
#
# PURPOSE:
#   Configure Python tools using INI-style syntax. While pyproject.toml is
#   preferred for modern projects, some tools still read setup.cfg.
#   Use this for tools that don't yet support pyproject.toml.
#
# USAGE:
#   1. Copy this file to setup.cfg in your project root
#   2. Customize tool configurations as needed
#   3. Consider migrating to pyproject.toml where supported
#
# BOOTSTRAP INTEGRATION:
#   Bootstrap scripts can adjust settings based on bootstrap.conf:
#   - PYTHON_VERSION -> target version settings
#   - Line length settings align with .prettierrc
#   After setup, this file is the authoritative source for legacy tool config.
#
# ==============================================================================

# ==============================================================================
# 1. MYPY - Static Type Checker
# ==============================================================================
[mypy]
# Ignore missing type stubs for third-party libraries
ignore_missing_imports = True

# Python version for type checking
python_version = 3.11

# Enable strict mode for maximum type safety
# strict = True

# Exclude directories from type checking
exclude =
    # Virtual environments
    venv/
    .venv/
    # Build directories
    build/
    dist/
    # Generated code
    .*generated/
    migrations/

# ==============================================================================
# 2. PYLINT - Code Linter/Analyzer
# ==============================================================================
[pylint]
# Directories to skip during analysis
ignore =
    .venv,
    tests,
    migrations,
    build,
    dist

# Line length (align with Prettier/Black)
max-line-length = 100

# Disable specific messages
disable =
    C0301,  # Line too long (handled by Black)
    C0114,  # Missing module docstring
    C0115,  # Missing class docstring
    C0116,  # Missing function docstring
    W0613,  # Unused argument (common in handlers)
    R0903   # Too few public methods

# ==============================================================================
# 3. PYTEST - Test Runner
# ==============================================================================
[pytest]
# Directories to skip during test discovery
norecursedirs =
    .venv
    .git
    .tox
    build
    dist
    migrations
    .mypy_cache
    __pycache__

# ==============================================================================
# 4. FLAKE8 - Style Guide Enforcement
# ==============================================================================
[flake8]
# Line length (align with Black)
max-line-length = 100

# Directories to exclude
exclude =
    .venv,
    venv,
    .git,
    build,
    dist,
    migrations,
    __pycache__

# Ignore specific rules (handled by Black)
ignore =
    E203,  # Whitespace before ':' (Black compatibility)
    E501,  # Line too long (handled by Black)
    W503   # Line break before binary operator

# ==============================================================================
# 5. COVERAGE - Code Coverage
# ==============================================================================
[coverage:run]
# Directories to exclude from coverage
omit =
    .venv/*
    venv/*
    tests/*
    migrations/*
    */__pycache__/*

# Branch coverage
branch = True

[coverage:report]
# Exclude lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    if TYPE_CHECKING:

# ==============================================================================
# END OF SETUP.CFG
# ==============================================================================
